<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sellerInnerToolbar"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/seller_toolbar_logo_card"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="64dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/seller_inner_toolbar_logo"
                android:padding="5dp"
                android:tint="@color/LogoTextColor"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/baseline_arrow_back_48" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/lider_trade"
        android:id="@+id/innerToolbarTitle"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/LogoTextColor"
        android:textSize="24sp"
        android:textStyle="" />
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/seller_toolbar_cart_card"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            android:layout_marginEnd="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="64dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/seller_toolbar_cart"
                    android:padding="5dp"
                    android:tint="@color/LogoTextColor"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/shopping_cart" />
                <androidx.cardview.widget.CardView
                    android:layout_alignEnd="@+id/seller_toolbar_cart"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="3dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/badge_notification_1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:text="000"
                            android:visibility="visible"
                            android:gravity="center"
                            android:background="@drawable/badge_item_count"
                            android:textColor="@color/white"
                            android:textSize="4sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>




        </com.google.android.material.card.MaterialCardView>


</androidx.appcompat.widget.Toolbar>