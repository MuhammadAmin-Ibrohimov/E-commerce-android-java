<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="12"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:maxLength="5"
        android:padding="5dp"
        android:background="@drawable/just_border"
        android:text="Date"
        android:id="@+id/selectedDate"
        android:textSize="12sp"
        android:textColor="@color/LogoTextColor"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:maxLines="1"
        android:layout_weight="1"
        android:text="Quantity"
        android:id="@+id/totalQuantity"
        android:background="@drawable/just_border"
        android:textSize="12sp"
        android:textColor="@color/LogoTextColor"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:maxLines="1"
        android:layout_weight="2"
        android:background="@drawable/just_border"
        android:text="TotalCashPrice"
        android:id="@+id/totalCashPrice"
        android:textSize="12sp"
        android:textColor="@color/LogoTextColor"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/just_border"
        android:padding="5dp"
        android:maxLines="1"
        android:layout_weight="2"
        android:id="@+id/totalCreditPrice"
        android:text="TotalCreditPrice"
        android:textSize="12sp"
        android:textColor="@color/LogoTextColor"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/just_border"
        android:padding="5dp"
        android:maxLines="1"
        android:layout_weight="2"
        android:text="TotalPrice"
        android:id="@+id/totalPrice"
        android:textSize="12sp"
        android:textColor="@color/LogoTextColor"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:background="@drawable/just_border"
        android:padding="5dp"
        android:layout_weight="2"
        android:text="TotalBoughtPrice"
        android:id="@+id/totalBoughtPrice"
        android:textSize="12sp"
        android:textColor="@color/LogoTextColor"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/just_border"
        android:padding="5dp"
        android:maxLines="1"
        android:layout_weight="2"
        android:text="TotalDifferencePrice"
        android:id="@+id/totalDifferencePrice"
        android:textSize="12sp"
        android:textColor="@color/LogoTextColor"/>


</LinearLayout>