<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/subcategorySubCategoriesCardView"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewFilledStyle"
        android:elevation="20dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:strokeWidth="1sp"
        app:strokeColor="@color/CardBorderColor"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/subcategoryPic"
                        android:layout_width="128dp"
                        android:scaleType="centerCrop"
                        android:layout_height="128dp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        app:srcCompat="@drawable/baseline_home_48" />


            <TextView
                    android:id="@+id/subcategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLength="30"
                    android:text="@string/productName"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/LogoTextColor"
                    android:textSize="20sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>