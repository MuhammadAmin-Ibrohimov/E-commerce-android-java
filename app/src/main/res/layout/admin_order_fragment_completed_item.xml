<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/LogoTextColor"
        app:strokeWidth="1sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/customerIcon99"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_account_circle_48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/LogoTextColor" />
            <TextView
                android:id="@+id/textViewName99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Xaridor:"
                android:textColor="@color/LogoTextColor"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/customerIcon99"
                app:layout_constraintTop_toTopOf="@+id/customerIcon99" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:id="@+id/orderListCustomerName"
                android:text="Xaridor F.I.SH."
                android:maxWidth="200dp"
                android:textColor="@color/LogoTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textViewName99"
                app:layout_constraintTop_toBottomOf="@+id/textViewName99" />


            <ImageView
                android:id="@+id/phoneIcon99"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/baseline_access_time_filled_48"
                app:layout_constraintBottom_toBottomOf="@+id/customerIcon99"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/customerIcon99"
                app:tint="@color/LogoTextColor" />
            <TextView
                android:id="@+id/textViewTime99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Buy. yak. vaqt:"
                android:textColor="@color/LogoTextColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/phoneIcon99"
                app:layout_constraintEnd_toStartOf="@+id/phoneIcon99"
                app:layout_constraintTop_toTopOf="@+id/phoneIcon99"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/orderListCompletedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:maxLength="20"
                android:text="Buy. yak. vaqt:"
                android:textColor="@color/LogoTextColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/textViewTime99"
                app:layout_constraintTop_toBottomOf="@+id/textViewTime99" />

            <ImageView
                android:id="@+id/sellerIcon99"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_account_box_48"
                app:layout_constraintEnd_toEndOf="@+id/customerIcon99"
                app:layout_constraintStart_toStartOf="@+id/customerIcon99"
                app:layout_constraintTop_toBottomOf="@+id/orderListCustomerName"
                app:tint="@color/LogoTextColor" />
            <TextView
                android:id="@+id/textViewSeller99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Sotuvchi: "
                android:textColor="@color/LogoTextColor"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/sellerIcon99"
                app:layout_constraintTop_toTopOf="@+id/sellerIcon99" />
            <TextView
                android:id="@+id/orderListSellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:maxLength="15"
                android:text="Seller Name"
                android:textColor="@color/LogoTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textViewSeller99"
                app:layout_constraintTop_toBottomOf="@+id/textViewSeller99" />

            <ImageView
                android:id="@+id/statusIcon99"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_money_48"
                app:layout_constraintBottom_toBottomOf="@+id/sellerIcon99"
                app:layout_constraintEnd_toEndOf="@+id/phoneIcon99"
                app:layout_constraintTop_toTopOf="@+id/sellerIcon99"
                app:tint="@color/LogoTextColor" />
            <TextView
                android:id="@+id/textViewStatus99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/roboto_medium"
                android:text="To'lov holati:"
                android:textColor="@color/LogoTextColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/statusIcon99"
                app:layout_constraintEnd_toStartOf="@+id/statusIcon99"
                app:layout_constraintTop_toTopOf="@+id/statusIcon99"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/orderListPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:maxLength="20"
                android:text="To'lov holati"
                android:textColor="@color/LogoTextColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/textViewStatus99"
                app:layout_constraintTop_toBottomOf="@+id/textViewStatus99" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10dp"
                android:id="@+id/longLineBreaker"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/phoneIcon99"
                app:layout_constraintStart_toStartOf="@+id/customerIcon99"
                app:layout_constraintTop_toBottomOf="@+id/orderListSellerName" />

            <ImageView
                android:id="@+id/moneyIcon99"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/round_monetization_on_48"
                app:layout_constraintEnd_toEndOf="@+id/customerIcon99"
                app:layout_constraintStart_toStartOf="@+id/customerIcon99"
                app:layout_constraintTop_toBottomOf="@+id/longLineBreaker"
                app:tint="@color/LogoTextColor" />
            <TextView
                android:id="@+id/textViewMoney99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Umumiy summa: "
                android:textColor="@color/LogoTextColor"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/moneyIcon99"
                app:layout_constraintTop_toTopOf="@+id/moneyIcon99" />
            <TextView
                android:id="@+id/orderListTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:maxLength="20"
                android:text="5000000 so'm"
                android:textColor="@color/LogoTextColor"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/textViewMoney99"
                app:layout_constraintStart_toStartOf="@+id/textViewMoney99"/>

            <ImageView
                android:id="@+id/packageStatusIcon99"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_display_settings_24"
                app:layout_constraintBottom_toBottomOf="@+id/moneyIcon99"
                app:layout_constraintEnd_toEndOf="@+id/statusIcon99"
                app:layout_constraintTop_toTopOf="@+id/moneyIcon99"
                app:tint="@color/LogoTextColor" />

            <TextView
                android:id="@+id/textViewPackageStatus99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Buyurtma holati:"
                android:textColor="@color/LogoTextColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/packageStatusIcon99"
                app:layout_constraintEnd_toStartOf="@+id/packageStatusIcon99"
                app:layout_constraintTop_toTopOf="@+id/packageStatusIcon99"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/orderListPackageStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:maxLength="20"
                android:text="Buyurtma holati"
                android:textColor="@color/LogoTextColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/textViewPackageStatus99"
                app:layout_constraintTop_toBottomOf="@+id/textViewPackageStatus99" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/checkTheOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderListTotalPrice">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderListLinLay"
                    android:background="@color/LogoTextColor"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:padding="10dp"
                        android:text="Buyurtmani ko'rib chiqish"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>