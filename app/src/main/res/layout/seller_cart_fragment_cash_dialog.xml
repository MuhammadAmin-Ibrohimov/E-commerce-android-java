<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Xaridor Ma'lumoti"
                android:textAlignment="center"
                android:textColor="@color/LogoTextColor"
                android:textSize="36sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forCustomerName"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Ism familiyasi"
                android:padding="10dp"
                android:textColorHint="@color/LogoTextColor"
                app:boxStrokeColor="@color/LogoTextColor"
                app:errorEnabled="true"
                app:helperTextTextColor="@color/LogoTextColor"
                app:hintTextColor="@color/LogoTextColor"
                app:placeholderTextColor="@color/LogoTextColor"
                app:startIconContentDescription="customerName"
                app:startIconDrawable="@drawable/baseline_account_circle_36"
                app:startIconTint="@color/LogoTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:textColor="@color/LogoTextColor"
                    android:textColorHighlight="@color/LogoTextColor"
                    android:textColorHint="@color/LogoTextColor"
                    android:textColorLink="@color/LogoTextColor"
                    android:textSize="24sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forCustomerHomeLocation"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Uy manzili"
                android:padding="10dp"
                android:textColorHint="@color/LogoTextColor"
                app:boxStrokeColor="@color/LogoTextColor"
                app:errorEnabled="true"
                app:helperTextTextColor="@color/LogoTextColor"
                app:hintTextColor="@color/LogoTextColor"
                app:placeholderTextColor="@color/LogoTextColor"
                app:startIconContentDescription="customerLocation"
                app:startIconDrawable="@drawable/baseline_location_on_36"
                app:startIconTint="@color/LogoTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customerHomeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/LogoTextColor"
                    android:textColorHighlight="@color/LogoTextColor"
                    android:textColorHint="@color/LogoTextColor"
                    android:textColorLink="@color/LogoTextColor"
                    android:textSize="24sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forCustomerPhoneNumber"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Telefon raqami"
                android:padding="10dp"
                android:textColorHint="@color/LogoTextColor"
                app:boxStrokeColor="@color/LogoTextColor"
                app:errorEnabled="true"
                app:helperTextTextColor="@color/LogoTextColor"
                app:hintTextColor="@color/LogoTextColor"
                app:placeholderTextColor="@color/LogoTextColor"
                app:prefixText="+998 "
                app:prefixTextColor="@color/LogoTextColor"
                app:startIconContentDescription="customerLocation"
                app:startIconDrawable="@drawable/baseline_phone_android_36"
                app:startIconTint="@color/LogoTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customerPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/LogoTextColor"
                    android:textColorHighlight="@color/LogoTextColor"
                    android:textColorHint="@color/LogoTextColor"
                    android:textColorLink="@color/LogoTextColor"
                    android:textSize="24sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <CheckBox android:id="@+id/checkboxOrderLocation"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:textSize="24sp"
                android:textColor="@color/LogoTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyurtma qabul qilingan joyni belgilash" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/LogoTextColor"
            android:id="@+id/confirmCustomerDetail"
            android:clickable="true"
            android:checkable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@color/LogoTextColor"
                android:backgroundTint="@color/RankColor"
                android:fontFamily="@font/roboto_medium"
                android:padding="10dp"
                android:text="Tasdiqlash"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>

