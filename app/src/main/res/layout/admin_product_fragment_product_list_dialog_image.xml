<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cartActivityProductPic"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:padding="3dp"
            app:srcCompat="@drawable/baseline_home_48" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartActivityProductName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="50"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Url of the product image"
            android:textColor="@color/LogoTextColor"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:id="@+id/imageDeleteBtn"
            android:layout_height="24dp"
            android:src="@drawable/trash_can_outline"/>

    </LinearLayout>

</LinearLayout>