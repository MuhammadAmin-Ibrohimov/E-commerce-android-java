<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/delivererToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/deliverer_toolbar_logo_card"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="64dp"
        app:cardElevation="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/deliverer_toolbar_logo"
            android:padding="3dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/logo" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/lider_trade"
        android:textColor="@color/LogoTextColor"
        android:textSize="24sp"
        android:textStyle="" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/deliverer_toolbar_map_card"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="64dp"
        app:cardElevation="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/deliverer_toolbar_cart"
            android:padding="3dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_location_on_24" />
    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.Toolbar>