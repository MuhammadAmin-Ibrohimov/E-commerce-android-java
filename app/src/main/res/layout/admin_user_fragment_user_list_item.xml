<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/userListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:background="@drawable/just_border"
        android:layout_weight="1"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="Jhon Doe"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/userListPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:background="@drawable/just_border"
        android:layout_weight="1"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="+998901234567"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="3"
        android:background="@drawable/just_border"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userListUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:checkable="true"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="28dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="28dp"
                android:background="@drawable/square_edit_outline"
                android:layout_height="28dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userListDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="28dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/trash_can_outline"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>