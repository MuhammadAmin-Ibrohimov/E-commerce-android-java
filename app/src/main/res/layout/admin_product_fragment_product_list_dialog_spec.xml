<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="5"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/specName"
        android:layout_width="0dp"
        android:background="@drawable/just_border"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxLength="30"
        android:maxLines="1"
        android:textSize="14sp"
        android:padding="10dp"
        android:hint="Xususiyat nomi"/>
    <TextView
        android:id="@+id/specValue"
        android:layout_width="0dp"
        android:background="@drawable/just_border"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxLength="30"
        android:maxLines="1"
        android:textSize="14sp"
        android:padding="10dp"
        android:hint="Xususiyat qiymati"/>

    <ImageView
        android:id="@+id/specListDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8.5dp"
        android:layout_weight="1"
        android:background="@drawable/spec_models_bg"
        app:tint="@color/LogoTextColor"
        android:src="@drawable/delete"/>
</LinearLayout>