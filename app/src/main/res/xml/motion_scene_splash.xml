<?xml version="1.0" encoding="utf-8"?>
<MotionScene
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:duration="5000"
        motion:autoTransition="animateToEnd"
        motion:constraintSetStart="@layout/login_activity_splash"
        motion:constraintSetEnd="@layout/login_activity_post_splash"
        >
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="05"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/logo"
                motion:percentX="0"
                motion:percentY="0"/>

            <KeyAttribute
                motion:motionTarget="@id/linearLayout"
                android:alpha="0"
                motion:framePosition="50"
                />
            <KeyAttribute
                motion:motionTarget="@id/linearLayout"
                android:alpha="1"
                motion:framePosition="70"/>
        </KeyFrameSet>
    </Transition>
</MotionScene>